{
"manifest_version": 2,
    "name": "Text Replacer",
    "description": "Test plugin for highlighting words and adding on hover event",
    "version": "1.0",
	"background": {
		"scripts": [
			"popup.js"
		]
	},
	"browser_action": {
		"default_title": "icon",
		"default_popup": "popup.html"
	},
	"icons": {
            "16": "img/on.png",
            "19": "img/on.png",
            "38": "img/on.png",
            "48": "img/on.png",
            "128": "img/on.png"
        },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}